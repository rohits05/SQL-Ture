USE sql_inventory;

SELECT product_id, name
FROM products
-- ORDER BY name -- Sorting in ascending order
-- ORDER BY product_id DESC -- Sorting in descending order
-- ORDER BY quantity_in_stock DESC, unit_price DESC -- Sorting in terms of name and then unit_price
ORDER BY 1 DESC, 2 DESC -- Sorting in terms of product_id and then name from the dataset
-- ORDER BY 1, 3 -- Sorting in terms of product_id and then unit_price