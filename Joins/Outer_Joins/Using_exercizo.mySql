-- USING sql_invoicing;

SELECT 
        p.date, 
        c.name AS client, 
        p.amount, 
        pm.name AS payment_method
FROM payments p
JOIN clients c 
        USING (client_id)
JOIN payment_methods pm --  USING (payment_method_id)
        ON p.payment_method_id = pm.payment_method_id
 
